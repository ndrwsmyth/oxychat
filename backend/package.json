{
  "name": "oxychat-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "migrate:up": "tsx src/scripts/migrations/apply.ts",
    "migrate:down": "tsx src/scripts/migrations/rollback.ts",
    "migrate:status": "tsx src/scripts/migrations/status.ts",
    "guard:sediment": "tsx src/scripts/check-sediment-guardrails.ts",
    "db:reset": "tsx src/scripts/reset-and-bootstrap-db.ts",
    "db:reset:seed": "tsx src/scripts/reset-and-bootstrap-db.ts --seed",
    "seed:s1": "tsx src/scripts/seed-s1.ts",
    "seed:s2": "tsx src/scripts/seed-s2.ts",
    "seed:s3": "tsx src/scripts/seed-s3.ts",
    "seed:s4": "tsx src/scripts/seed-s4.ts",
    "bench:workspaces-tree": "tsx src/scripts/bench-workspaces-tree.ts",
    "bench:transcript-classification": "tsx src/scripts/bench-transcript-classification.ts",
    "bench:s3-sidebar": "tsx src/scripts/bench-s3-sidebar.ts",
    "bench:s4-mentions": "tsx src/scripts/bench-s4-mentions.ts",
    "bench:s4-chat-latency": "tsx src/scripts/bench-s4-chat-latency.ts",
    "bench:s4": "pnpm run bench:s4-mentions && pnpm run bench:s4-chat-latency",
    "gate:s1": "tsx src/scripts/s1-demo-gate.ts",
    "gate:s2": "tsx src/scripts/s2-demo-gate.ts",
    "gate:s3": "tsx src/scripts/s3-demo-gate.ts",
    "gate:s4": "tsx src/scripts/s4-demo-gate.ts",
    "test:s2": "vitest run",
    "backfill:conversation-project": "tsx src/scripts/backfill-conversation-project.ts",
    "backfill:transcript-attendees": "tsx src/scripts/backfill-transcript-attendees.ts",
    "backfill:transcript-classification-links": "tsx src/scripts/backfill-transcript-classification-links.ts",
    "check:conversation-project-nulls": "tsx src/scripts/check-conversation-project-nulls.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@ndrwsmyth/sediment": "git+https://github.com/ndrwsmyth/sediment.git#v0.1.1",
    "@clerk/backend": "^2.29.7",
    "@hono/node-server": "^1.13.0",
    "pg": "^8.13.3",
    "@supabase/supabase-js": "^2.49.0",
    "dotenv": "^16.4.7",
    "hono": "^4.7.0",
    "openai": "^4.77.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/pg": "^8.11.11",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
